<div class="panel text-center">
  <div class="row">
    <div class="large-12 columns"><%= image_tag(@book.item.image_url, class: "small-cover",alt: @book.author_and_title, title: @book.author_and_title) %></div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <p class="text-left">
        <%= @book.title %> is available for purchase on Amazon.com. You are welcome to <%= link_to('read the entire original text', book_path(@book)) %> for free here, but if you'd like to browse other editions, please visit Amazon.
       </p>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= link_to("View on Amazon", @book.item.detail_page_url, class: "button radius expanded") %>
    </div>
  </div>
</div>
