<div class="row">
  <%= image_tag('logo.png', class: 'logo') %>
</div>
<% if @book.present? and current_page?(book_path(@book)) %>
  <%= render 'layouts/offer' %>
<% else %>
  <%= render 'layouts/subscribe' %>
<% end %>
<div>
  <h3>Have You Read?</h3>
  <ul class="side-nav">
   <% @random_books.each do |book| %>
    <li><%= link_to("#{book.title} by #{book.author.full_name}", book_path(book) )%></li>
  <% end %>
  </ul>
</div>
