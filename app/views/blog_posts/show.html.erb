<% content_for :title, "#{@blog_post.title} -- " %>
<h2><%= @blog_post.title %></h2>
<div>
  <% if user_signed_in? and current_user.role == 'admin' %>
  <p><%= link_to('Edit', edit_blog_post_path(@blog_post)) %></p>
  <% end %>
</div>
<div><%= simple_format(@blog_post.body) %></div>
<% if @blog_post.book.item.present? %>
  <div class="panel">
    <div class="row">
      <div class="large-3 columns"><%= image_tag(@blog_post.book.item.image_url, class: "small-cover") %></div>
      <div class="large-9 columns">
        <div class="row">
          <div class="large-12 columns">
            <h3><%= @blog_post.book.title %></h3>
            <p>
              <%= @blog_post.book.title %> is available for purchase on Amazon.com. You are welcome to <%= link_to('read the entire original text', book_path(@blog_post.book, page: @blog_post.section.position)) %> for free here on AncientWisdomTexts.com, but if you'd like to browse other editions, please visit Amazon.
             </p>
          </div>
        </div>
        <div class="row">
          <div class="large-3 columns">
            <%= link_to("View on Amazon", @blog_post.book.item.detail_page_url, class: "small button radius") %>
          </div>
        </div>
      </div>
    </div>
 </div>
<% else %>
  <div>
      <%= link_to('Read More from the Original Text', book_path(@blog_post.book, page: @blog_post.section.position)) %>
  </div>
<% end %>
