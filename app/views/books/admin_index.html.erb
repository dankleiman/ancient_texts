<h3>To Be Approved</h3>
<% if @pending.any? %>
  <table>
    <thead>
      <tr>
        <th width="200">BookTitle</th>
        <th width="50">Approved?</th>
        <th width="150">Choose Cover</th>
        <th width="150">Edit</th>
        <th width="150">Delete</th>
      </tr>
    </thead>
    <tbody>
    <% @pending.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.approved? ? "<i class='fa fa-check'></i> yes".html_safe : "<i class='fa fa-close'>no</i>".html_safe %></td>
        <td><%= link_to('Choose a Cover', cover_chooser_book_path(book))%></td>
        <td><%= link_to('Edit', edit_book_path(book))%></td>
        <td><%= link_to('Delete', book_path(book), data: {confirm: 'Are you sure?'}, method: :delete)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nothing to approve at this time...</p>
<% end %>
